<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="messageRenderer"
          class="projet.spring3.javaconfig.StandardOutMessageRenderer"
          p:messageProv-ref="messageProv"/>

    <bean id="messageProv"
          class="projet.spring3.javaconfig.ConfigurableMessageProvider"
          c:message="This is a configurable message"/>

</beans>