<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
          http://www.springframework.org/schema/context
          http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="messageProvider" class="projet.spring3.ConfigurableMessageProvider"
        c:message="This is a configurable message"/>
    <bean id="renderer" class="projet.spring3.StandardOutMessageRenderer"
          p:messageProvider-ref="messageProvider"/>
    <bean id="oracle" name="wiseworm" class="sp3.BookwormOracle"/>
    <bean id="injectRef" class="projet.spring3.xml.InjectRef">
        <property name="oracle">
            <ref bean="wiseworm"/>
        </property>
    </bean>
    <bean id="message" class="java.lang.String"
          c:_0="This is a configurable message"/>
<!--    <bean id="constructorConfusion"
          class="projet.spring3.ConstructorConfusion">
        <constructor-arg type="int">
            <value>90</value>
        </constructor-arg>
    </bean>-->
    <bean id="injectSimple" class="projet.spring3.InjectSimple">
        <property name="name">
            <value>John Smith</value>
        </property>
        <property name="age">
            <value>35</value>
        </property>
        <property name="height">
            <value>1.78</value>
        </property>
        <property name="programmer">
            <value>true</value>
        </property>
        <property name="ageInSeconds">
            <value>1103760000</value>
        </property>
    </bean>
    <bean id="injectSimpleConfig" class="projet.spring3.xml.InjectSimpleConfig"/>

    <bean id="injectSimpleSpel" class="projet.spring3.xml.InjectSimpleSpel">
        <property name="name" value="#{injectSimpleConfig.name}"/>
        <property name="age" value="#{injectSimpleConfig.age + 1}"/>
        <property name="height" value="#{injectSimpleConfig.height}"/>
        <property name="isProgrammer" value="#{injectSimpleConfig.programmer}"/>
        <property name="ageInSeconds" value="#{injectSimpleConfig.ageInSeconds}"/>
    </bean>

    <!-- utilisation pour hierarchie -->
    <!--<bean id="target1" class="projet.spring3.SimpleTarget">
        <property name="val">
            <ref bean="injectBeanParent"/>
        </property>
    </bean>
    <bean id="target2" class="projet.spring3.SimpleTarget">
        <property name="val">
            <ref bean="injectBean"/>
        </property>
    </bean>

    <bean id="target3" class="projet.spring3.SimpleTarget">
        <property name="val">
            <ref parent="injectBean"/>
        </property>
    </bean>-->

    <bean id="injectBean" class="java.lang.String">
        <constructor-arg>
            <value>Bean In Child</value>
        </constructor-arg>
    </bean>
    <bean id="injectCollection" class="projet.spring3.xml.CollectionInjection">
        <property name="map">
            <map>
                <entry key="someValue">
                    <value>Hello World!</value>
                </entry>
                <entry key="someBean">
                    <ref local="oracle"/>
                </entry>
            </map>
        </property>
        <property name="props">
            <props>
                <prop key="firstName">Clarence</prop>
                <prop key="secondName">Ho</prop>
            </props>
        </property>
        <property name="set">
            <set>
                <value>Hello World!</value>
                <ref local="oracle"/>
            </set>
        </property>
        <property name="list">
            <list>
                <value>Hello World!</value>
                <ref local="oracle"/>
            </list>
        </property>
    </bean>


</beans>
